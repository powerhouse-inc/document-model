{
    "compilerOptions": {
        "target": "esnext",
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*",
        "vite.config.ts",
        "node_modules/@types/wicg-file-system-access/index.d.ts"
    ],
    "exclude": ["src/document/utils/browser.ts"]
}
