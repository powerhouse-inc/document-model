{
    "name": "@powerhouse/document-model",
    "version": "1.0.0",
    "license": "AGPL-3.0-only",
    "private": false,
    "files": [
        "dist"
    ],
    "type": "module",
    "main": "dist/node/index.js",
    "module": "dist/node/index.js",
    "scripts": {
        "lint": "eslint --ext .js,.ts . && tsc --noemit --project tsconfig.spec.json",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "build": "yarn build:browser && yarn build:node",
        "build:browser": "vite build --mode browser",
        "build:node": "vite build --mode node",
        "test": "jest"
    },
    "exports": {
        ".": {
            "import": "./dist/node/index.js"
        },
        "./browser": {
            "import": "./dist/browser/index.js"
        }
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.1",
        "@types/jest": "^29.5.4",
        "@types/mime": "^3.0.1",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "jest": "^29.6.4",
        "prettier": "^3.0.2",
        "prettier-plugin-organize-imports": "^3.2.3",
        "rollup-plugin-polyfill-node": "^0.12.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vite": "^4.4.9",
        "vite-plugin-dts": "^3.5.2",
        "vite-plugin-node-polyfills": "^0.11.3"
    },
    "dependencies": {
        "immer": "^10.0.2",
        "json-stringify-deterministic": "^1.0.10",
        "jszip": "^3.10.1",
        "mime": "^3.0.0",
        "sha.js": "^2.4.11",
        "zod": "^3.22.2"
    }
}
